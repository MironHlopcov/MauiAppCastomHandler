<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:controls="clr-namespace:MauiAppCastomHandler.Controls"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiAppCastomHandler.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <controls:MyDatePieker
                x:Name="For"/>
            <controls:MyDatePieker
                x:Name="To"
                MinDateValue="{Binding DateValue, Source={x:Reference For}}"/>
            <Label
                Text="{Binding DateValue, Source={x:Reference For}}"/>
            <Label
                Text="{Binding DateValue, Source={x:Reference To}}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>



